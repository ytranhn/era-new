	.tourDetailCalendar.shadow--1
		.tourDetailCalendar__title
			h2.fw-700 Price
			.tourDetailCalendar__price
				p.price__decrease
					span Valued at
					del đ 4,000,00
				h4 3,199,000đ
					span /per
				p 
					span Applied for group 7-9 persons
		.tourDetailCalendar__form
			.form__group--type-1
				label
					span.text-uppercase.form__title DEPARTURE DATE
					input.form__control#date-choosen(type="text" placeholder="Add Dates")
			.form__group--type-1.form__group--date
				label
					input.d-none#tour-detail-calendar(type="text" data-date data-date-inline="true" data-date-target="#date-choosen")
