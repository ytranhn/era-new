.premadeTour.tourDetail--top
	.container-fluid
		.mainWrapper
			include ../layouts/tour-detail/_general
			.tourDetail__tabSections
				ul.scrollspyWrapper
					li
						a(data-target="tabSection-1") Overview
					li
						a(data-target="tabSection-2") Initerary
					li
						a(data-target="tabSection-3") Inclusions & Exclusion
					li
						a(data-target="tabSection-4") Important Info
					li
						a(data-target="tabSection-5") Reviews
				.list-button
					.button__item.btn.btn-icon
						.icon
							img(src='./assets/icons/share.svg' alt='')
						span SHARE
					.button__item.btn.btn-icon
						.icon
							img(src='./assets/icons/printer.svg' alt='')
						span PRINT
.premadeTour
	.container-fluid
		.mainWrapper
			.row
				.col-xl-8.col-lg-7
					include ../layouts/tour-detail/_photo
					include content
					include ../layouts/tour-detail/_also-like
					div(data-id="tabSection-5")
						include ../layouts/tour-detail/_review
				.col-xl-4.col-lg-5.cartAside__col
					include ../layouts/tour-detail/_calendar
					include ../layouts/tour-detail/_discount
					.cartAside__colWrapper
						include _cart-aside